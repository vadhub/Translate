package com.vg.translate;

import java.util.HashMap;
import java.util.Map;

public class Traslater {
	private Map<String, String> st = new HashMap<String, String>();
	
	private void dictionary(){
		st.put("Hello", "Привет");
		st.put("World", "Мир");
	}
	
	public void translateToRus(String englis){
		if(st.containsKey(englis)==st.containsKey(getSt().values())){
			System.out.println(st.get(englis));			
		}
	}
	public Map<String, String> getSt() {
		return st;
	}
	public void setSt(Map<String, String> st) {
		this.st = st;
	}
}
